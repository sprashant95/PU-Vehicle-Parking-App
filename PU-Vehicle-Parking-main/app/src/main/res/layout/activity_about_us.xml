<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="226dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="-80dp"
                android:alpha="0.2"
                android:rotation="23"
                android:src="@drawable/bg1" />

            <ImageView
                android:layout_width="259dp"
                android:layout_height="309dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-193dp"
                android:layout_marginTop="193dp"
                android:layout_marginEnd="100dp"
                android:alpha="0.3"
                android:rotation="23"
                android:src="@drawable/bg2" />


            <ImageView
                android:layout_width="411dp"
                android:layout_height="422dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-150dp"
                android:layout_marginTop="590dp"
                android:layout_marginRight="40dp"
                android:alpha="0.2"
                android:rotation="49"
                android:src="@drawable/bg3" />

            <ImageView
                android:layout_width="259dp"
                android:layout_height="309dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-150dp"
                android:layout_marginTop="1299dp"
                android:layout_marginRight="-80dp"
                android:alpha="0.2"
                android:rotation="49"
                android:src="@drawable/bg2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:layout_margin="3dp"
                    android:paddingLeft="12dp"
                    android:gravity="left"
                    android:text="Team Insights: "
                    android:textColor="@color/white"
                    android:textSize="35dp">

                </TextView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rohit" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/acme"
                                android:text="Rohit Singh "
                                android:textColor="@color/yellow"
                                android:textSize="35dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:fontFamily="@font/poppins_light"
                            android:justificationMode="inter_word"
                            android:text="@string/rohitdesc"
                            android:textColor="@color/white"
                            android:textSize="13.5dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/acme"
                            android:text="Follow :"
                            android:textColor="@color/yellow"
                            android:textSize="30dp" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/linkedinR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linkedin" />



                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="102dp"
                                android:layout_height="111dp"
                                android:layout_gravity="center"
                                android:src="@drawable/prashant" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:text="Prashant  Sahatiya "
                                android:fontFamily="@font/acme"
                                android:textColor="@color/yellow"
                                android:textSize="30dp" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:justificationMode="inter_word"
                            android:text="@string/prashantdesc"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="13.5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:text="Follow :"
                            android:fontFamily="@font/acme"
                            android:textColor="@color/yellow"
                            android:textSize="30dp" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">



                    <ImageView
                        android:id="@+id/linkedinP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linkedin" />




                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="103dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/femil" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/acme"
                                android:text="Dheeraj Kumar Singh"
                                android:textColor="@color/yellow"
                                android:textSize="32dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:justificationMode="inter_word"
                            android:text="@string/femildesc"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="13.5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:text="Follow :"
                            android:textColor="@color/yellow"
                            android:textSize="30dp" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/linkedinF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/linkedin" />



                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="18dp"
                    android:fontFamily="@font/acme"
                    android:text="All Rights Reserved | MicraSol LLP"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>














