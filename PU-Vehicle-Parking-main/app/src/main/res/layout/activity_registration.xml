<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="4343dp"
        android:layout_height="79886dp"
        android:layout_marginStart="-490dp"
        android:layout_marginTop="-430dp"
        android:layout_marginEnd="-520dp"
        android:layout_marginBottom="-490dp"
        android:alpha="0.2"
        android:src="@drawable/pusplash" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="163dp"
                    android:layout_height="142dp"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.4"
                    android:src="@drawable/eclipse" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="center"
                    android:src="@drawable/group" />
            </RelativeLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Signup Page"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="36dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <EditText
                android:id="@+id/etname"
                android:layout_width="889px"
                android:layout_height="136px"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/etmisid"
                android:layout_width="889px"
                android:layout_height="136px"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="MIS Id"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/etemail"
                android:layout_width="889px"
                android:layout_height="136px"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/etphone"
                android:layout_width="889px"
                android:layout_height="136px"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/etpassword"
                android:layout_width="889px"
                android:layout_height="136px"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Password as you DOB: 120997"
                android:inputType="numberPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/registerbtn"
                android:layout_width="889px"
                android:layout_height="176px"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:backgroundTint="@color/purple_200"
                android:text="Register" />

            <TextView
                android:id="@+id/txtbtn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Already Have An Account"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold"
                android:onClick="gotologin"
                 />

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>

    </ScrollView>



</RelativeLayout>